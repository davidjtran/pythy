%table.table.table-bordered.table-striped.table-condensed
  %thead
    %tr
      %th.span4 Full Name
      %th.span4 E-mail
      %th.span3 Role
      %th.span1= icon_tag('cog')
  %tbody#course_enrollments
    - if enrollments.empty?
      %td{ colspan: 4 }
        .alert There are no users currently enrolled in this course offering.
    - else
      = render enrollments

- unless enrollments.empty?
  #course_enrollments_paginator
    = paginate enrollments, :param_name => "enrollments_" + enrollments.first.course_offering_id.to_s + "_page"
