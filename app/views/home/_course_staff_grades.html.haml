.container
  %table#grades-table.table.table-condensed.table-striped
    %thead
      %tr
        %th Name
        - @course_grades.assignment_offerings.each do |offering|
          %th= offering.assignment.short_name
    %tbody
      - @course_grades.users.each do |user|
        %tr
          %td.has_gravatar
            = gravatar_tag(user, 28)
            = user.display_name
          - @course_grades.grades_for_user(user).each do |grade|
            %td
              = grade && percentage(grade) || '&ndash;'.html_safe
