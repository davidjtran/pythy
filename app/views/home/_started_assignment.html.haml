- repository = started_assignment.repository_for_user(current_user)
- most_recent_check = repository.assignment_checks.most_recent
.assignment-tile-wrapper.student
  .assignment-tile.front{ href: assignment_url(started_assignment.assignment) }
    = assignment_date_tag(started_assignment)
    .assignment-short-name><= started_assignment.assignment.short_name
    .assignment-long-name><= started_assignment.assignment.long_name
  .assignment-tile.back
    = link_to code_path(started_assignment) do
      = icon_tag('laptop')
      Code
    = link_to started_assignment.assignment do
      = icon_tag('list-ol')
      Description
  = score_tile(most_recent_check)