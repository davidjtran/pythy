.jumbo-title
  .container
    .row
      .span8
        %h1.slim
          = @course.number
        %p.lead
          = @course.name
      .span4
        .pull-right
          %span.btn-aligned Viewing:
          .btn-group
            %a.btn.btn-inverse.dropdown-toggle{ href: '#', data: { toggle: 'dropdown' }}
              - if params[:offering]
                = @offerings.first.full_label
              - else
                = "All #{@offerings.first.term.display_name} offerings"
              %span.caret
            %ul.dropdown-menu.pull-right
              %li
                = link_to "All #{@offerings.first.term.display_name} offerings", home_path(@course, term: @offerings.first.term)
              %li.divider
              %li.nav-header
                = "#{@offerings.first.term.display_name} Offerings"
              - @offerings.each do |co|
                %li
                  = link_to co.full_label, home_path(co)
.container
  %ul.nav.nav-tabs
    = tab_tag 'assignments-tab', icon_tag('laptop') + ' Assignments', active: true
    = tab_tag 'users-tab', icon_tag('group') + ' Users'
    = tab_tag 'grades-tab', icon_tag('tasks') + ' Grades'
    - if can? :edit, @offerings.first
      = tab_tag 'settings-tab', icon_tag('cog') + ' Settings'

.tab-content
  #assignments-tab.tab-pane.active
    = render partial: 'course_staff_assignments'
  #users-tab.tab-pane
    = render partial: 'course_staff_users'
  #grades-tab.tab-pane
    = render partial: 'course_staff_grades'
  #settings-tab.tab-pane
    - if params[:offering]
      = render partial: 'course_staff_offering_settings'
    - else
      = render partial: 'course_staff_settings'
  
