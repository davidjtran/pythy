= twitter_bootstrap_form_for resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-horizontal'} do |f|
  = devise_error_messages!

  = f.fieldset 'Pythy Sign In' do
    = f.text_field :email
    = f.password_field :password

    - if devise_mapping.rememberable?
      = f.label nil do |controls|
        = controls.check_box :remember_me, "Remember me"

  = f.actions do
    = f.submit 'Sign in', :class => 'btn btn-primary'
