%h1.no-border Users
= render :partial => "flashbar"
%table.table.table-striped
  %tbody
    - @users.each do |user|
      %tr
        %td= user.email
        %td= link_to 'Edit', edit_user_path(user), :class => 'btn'
        %td
          = link_to user, method: :delete, :class => 'btn btn-danger' do 
            %i.icon-large.icon-trash 
            Delete

= link_to new_user_path, :class => 'btn btn-primary' do
  %i.icon-plus
  New user
