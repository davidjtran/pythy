= twitter_bootstrap_form_for @user, html: { class: 'form-horizontal' } do |f|
  = form_errors @user

  = f.text_field :email
  = f.text_field :full_name
  = f.collection_select :institution_id, 'Institution', Institution.all, :id, :display_name, prompt: '(none)'

  = f.label 'Global roles' do |controls|
    - GlobalRole.all.each do |role|
      %label.checkbox
        = check_box_tag :global_role_ids, role.id, @user.global_roles.include?(role), name: 'user[global_role_ids][]'
        = role.name

  = f.actions do
    = f.submit
