<h1>Listing terms</h1>

<table>
  <tr>
    <th>Year</th>
    <th>Season</th>
    <th>Starts on</th>
    <th>Ends on</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @terms.each do |term| %>
  <tr>
    <td><%= term.year %></td>
    <td><%= term.season %></td>
    <td><%= term.starts_on %></td>
    <td><%= term.ends_on %></td>
    <td><%= link_to 'Show', term %></td>
    <td><%= link_to 'Edit', edit_term_path(term) %></td>
    <td><%= link_to 'Destroy', term, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

