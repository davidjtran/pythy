%ul.breadcrumb
  %li
    = link_to @course.organization.display_name, @course.organization
    %span.divider /
  %li.active
    = @course.number
  %li.pull-right
    = link_to edit_course_path(@course) do
      %i.icon-pencil
      Edit...

%h2.page-header
  = @course.number
  %small
    = @course.name

%p
  = link_to 'Create a new offering of this course...', new_course_course_offering_path(@course)

= render partial: 'course_offerings/index', locals: { course_offerings: @grouped_offerings }
