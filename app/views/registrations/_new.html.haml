= twitter_bootstrap_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-horizontal form-bordered' }) do |f|

  = f.email_field :email
  = f.password_field :password
  = f.password_field :password_confirmation

  = f.label 'Your name' do |name|
    = name.text_field :first_name, class: 'input-small', placeholder: 'First name'
    = name.text_field :last_name, class: 'input-small', placeholder: 'Last name'

  = f.actions do
    = f.submit 'Sign up'
